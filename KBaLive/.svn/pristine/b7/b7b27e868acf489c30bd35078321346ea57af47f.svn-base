				});
				//加
				$(".jia").click(function() {
					var fw_numb = $(".srkk").val();
					fw_numb++;
					$(".srkk").val(fw_numb);

					tola();
				})

				//减
				$(".jian").click(function() {
					var fw_numb = $(".srkk").val();
					if(fw_numb <= 1) {
						alert("数量不足了，请住手！")
					} else {
						fw_numb--;
						$(".srkk").val(fw_numb);
					}

					tola();
				})

			});

			function tola() {
				var $li = $(".invest_list").children("li.on");
				var money = $li.children("i").text();
				var count = $(".srkk").val();
				$(".zwfb_zje span").text(money * count);
			}
